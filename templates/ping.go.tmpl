package handlers

import (
	jsonresp "{{.ModuleName}}/pkg/http/response/json"
	"{{.ModuleName}}/pkg/schemas"
	log "{{.LoggerPackage}}"
	"net/http"
)


type Ping struct {
	l *log.Logger
	semVer *schemas.SemanticVersion
}

func NewPing(l *log.Logger, version *schemas.SemanticVersion) *Ping{
	return &Ping{
		l: l,
		semVer: version,
	}
}

func (p *Ping) Handler(w http.ResponseWriter, r *http.Request) {
	if r.Method != http.MethodGet {
		http.Error(w, "Method Not Allowed", http.StatusMethodNotAllowed)
		return
	}
	jsonresp.OK(w, r, p.semVer)
}